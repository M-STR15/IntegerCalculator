<UserControl
    x:Class="IntegerCalculator.Views.FormulaCalculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IntegerCalculator.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style x:Key="startBtn" TargetType="Button">
            <Setter Property="Width" Value="500" />
            <Setter Property="Background" Value="Green" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Content="Input File" />
        <TextBox Grid.Row="1" Text="{Binding SelectInputFile}" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Command="{Binding SelectInputFileCommand}"
            Content="Select file" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Command="{Binding GenerateInputFileCommand}"
            Content="Generate input file" />
        <Label Grid.Row="2" Content="Output File" />
        <TextBox Grid.Row="3" Text="{Binding SelectOutputFile}" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            Command="{Binding SelectOutputFileCommand}"
            Content="Select file" />
        <Button
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Command="{Binding StartCommand}"
            Content="Start"
            Style="{StaticResource startBtn}" />
        <Grid
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="5">
            <ProgressBar
                x:Name="progressBar"
                Height="22"
                Maximum="100"
                Minimum="0"
                Value="{Binding ProgressExpression}" />
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                <Run Text="{Binding ProgressExpression,FallbackValue=0}" />
                <Run Text="%" />
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
