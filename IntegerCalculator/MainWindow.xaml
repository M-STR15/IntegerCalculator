<Window
    x:Class="IntegerCalculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IntegerCalculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:IntegerCalculator.UIComponents;assembly=IntegerCalculator.UIComponents"
    xmlns:views="clr-namespace:IntegerCalculator.Views"
    Title="MainWindow"
    Background="Black"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="113*" />
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="2" Margin="10,10,10,10" Background="Transparent">

            <TabItem Header="Calculator">
                <views:HandCalculator DataContext="{Binding HandCalculatorViewModel}" />
            </TabItem>
            <TabItem Header="File caltulator" >
                <views:FormulaCalculator DataContext="{Binding FormulaCalculatorViewModel}" />
            </TabItem>

        </TabControl>
    </Grid>
</Window>
