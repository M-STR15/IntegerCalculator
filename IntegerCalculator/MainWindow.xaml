<Window
    x:Class="IntegerCalculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IntegerCalculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:IntegerCalculator.UIComponents;assembly=IntegerCalculator.UIComponents"
    xmlns:views="clr-namespace:IntegerCalculator.Views"
    Title="Integer calculator"
    Background="Black"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TabControl
            Grid.Row="0"
            Margin="10,10,10,10"
            Background="Transparent">
            <TabItem Header="Calculator">
                <views:HandCalculator DataContext="{Binding HandCalculatorViewModel}" />
            </TabItem>
            <TabItem Header="File caltulator">
                <views:FormulaCalculator DataContext="{Binding FormulaCalculatorViewModel}" />
            </TabItem>
        </TabControl>
        <Label
            Grid.Row="1"
            HorizontalAlignment="Center"
            Content="{Binding VersionSW, FallbackValue=xx.xx.xx, TargetNullValue=xx.xx.xx}" />
    </Grid>
</Window>
