<UserControl
    x:Class="IntegerCalculator.UIComponents.Display"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IntegerCalculator.UIComponents"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="#003300" ClipToBounds="True">
        <Border
            BorderBrush="#0A3A0A"
            BorderThickness="3"
            CornerRadius="5" />
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <TextBox
                x:Name="DisplayText"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                Background="Transparent"
                FontFamily="/YourAssemblyName;component/Fonts/#DS-Digital"
                FontSize="60"
                Foreground="#77FF66"
                PreviewKeyDown="DisplayText_PreviewKeyDown"
                PreviewTextInput="DisplayText_PreviewTextInput"
                Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        ShadowDepth="0"
                        Color="#00FF00" />
                </TextBox.Effect>
            </TextBox>
        </ScrollViewer>
    </Grid>
</UserControl>
